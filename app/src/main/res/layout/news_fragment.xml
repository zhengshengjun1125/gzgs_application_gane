<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/news_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--显示新闻文字以及最右边的搜索图标-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/news_text"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:text="新闻"
            android:textSize="40dp" />

        <ImageView
            android:id="@+id/news_search"
            android:layout_width="115dp"
            android:layout_height="50dp"
            android:layout_marginLeft="206dp"
            android:layout_toRightOf="@id/news_text"
            android:src="@drawable/ic_search" />

    </RelativeLayout>

    <!--做新闻的fragment的切换-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/news_wealth"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="财经"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/news_military"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/news_wealth"
            android:gravity="center"
            android:text="军事"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/news_education"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/news_military"
            android:gravity="center"
            android:text="教育"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/news_amusement"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/news_education"
            android:gravity="center"
            android:text="娱乐"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/news_pe"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/news_amusement"
            android:gravity="center"
            android:text="体育"
            android:textSize="20dp" />

    </RelativeLayout>
<!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#000000"
        />

    <FrameLayout
        android:id="@+id/news_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />


</LinearLayout>