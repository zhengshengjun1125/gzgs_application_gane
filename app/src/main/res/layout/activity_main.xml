    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/sideshow"
        android:drawableLeft="@drawable/user_avater"
        android:drawablePadding="10dp"
        android:hint="请输入用户名"
        android:inputType="text" />

    <EditText
        android:id="@+id/user_pass"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_below="@+id/username"
        android:drawableLeft="@drawable/user_pass"
        android:drawablePadding="10dp"
        android:hint="请输入密码"
        android:inputType="textPassword" />


    <TextView
        android:backgroundTint="@color/white"
        android:id="@+id/forget_pass"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="260dp"
        android:layout_toRightOf="@+id/user_pass"
        android:autoLink="all"
        android:text="忘了密码?"
        android:textColor="@color/blue"
        android:textSize="16dp"
        tools:ignore="OnClick"
        android:background="@null" />

    <Button
        android:onClick="login"
        android:id="@+id/btn_agree"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/user_pass"
        android:backgroundTint="@color/blue"
        android:text="Login" />

    <!--SpannableString使用这个达成我们的目标-->
    <CheckBox
        android:id="@+id/read_agree"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/btn_agree"
         />

    <TextView
        android:id="@+id/agree_info"
        android:layout_width="450dp"
        android:layout_height="30dp"
        android:layout_below="@id/btn_agree"
        android:layout_toRightOf="@id/read_agree"
        android:textSize="18sp" />


</RelativeLayout>